{
  "name": "ascii-art-studio",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@ascii-art-studio/frontend",
    "build": "npm run build --workspaces --if-present",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit --composite false"
  },
  "devDependencies": {
    "@types/node": "22.12.0",
    "jsdom": "23.0.1",
    "typescript": "5.3.3",
    "vite": "7.3.0",
    "vitest": "4.0.16"
  }
}
